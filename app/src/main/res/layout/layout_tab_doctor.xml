                        android:id="@+id/tvDrAge"
                        style="@style/tab_text_color"/>

                    <TextView

                        android:text="Weight"
                        android:id="@+id/tvDrWeight"
                        style="@style/tab_text_color"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp">

                    <TextView

                        android:text="cm"
                        android:id="@+id/tvDrHeightUM"
                        style="@style/tab_text_color"/>

                    <TextView

                        android:text="yrs"
                        android:id="@+id/tvDrAgeUM"
                        style="@style/tab_text_color"/>

                    <TextView

                        android:text="kg"
                        android:id="@+id/tvDrWeightUM"
                        style="@style/tab_text_color"/>
                </TableRow>
            </TableLayout>

